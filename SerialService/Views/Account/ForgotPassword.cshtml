@{
    ViewBag.Title = "Сброс пароля";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/AccountForms/AccountForms.css" />
<div class="mdl-card mdl-shadow--2dp acc-card mdl-cell--4-col mdl-cell--12-col-phone mdl-grid">
    <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">@ViewBag.Title</h2>
    </div>
    <div class="acc-form-container mdl-cell--10-col mdl-cell--12-col-phone mdl-grid">
        <div class="mdl-card__actions mdl-card--border">
            <button type="button" class="mdl-button mdl-js-button acc-button" id="by-email-btn">
                По email
            </button>
            <button type="button" class="mdl-button mdl-js-button acc-button" id="by-parole-btn">
                По секретному слову
            </button>
        </div>
        <div class="acc-form-container mdl-cell--10-col mdl-cell--12-col-phone mdl-grid">
            <form method="post" class="mdl-cell--12-col" id="login-form">
                <div class="mdl-textfield mdl-js-textfield mdl-cell--12-col">
                    <input class="mdl-textfield__input" name="Email" required type="email" id="email">
                    <label class="mdl-textfield__label" for="email">Email...</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield mdl-cell--12-col">
                    <input class="mdl-textfield__input" name="Parole" pattern="[A-Za-zА-Яа-яЁё]+" id="parole">
                    <label class="mdl-textfield__label" for="parole">Ключ. слово...</label>
                </div>
            </form>
        </div>
        <div class="mdl-cell--12-col"><span style="display:none" class="error"></span></div>
        <div class="mdl-card__actions mdl-card--border">
            <button type="button" id="submit-btn" class="mdl-button mdl-js-button acc-button">
                Сбросить
            </button>
        </div>
    </div>
</div>

<script src="~/Scripts/AccountForms/CommonForm.js"></script>
<script src="~/Scripts/AccountForms/ForgotPasswordForm.js"></script>
