@model PagedList.IPagedList<SerialService.Models.ElasticVideoMaterial>
@using PagedList.Mvc;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (ViewBag.SearchResult != null)
    {
        ViewBag.Title = ViewBag.SearchResult;
    }
}
<script src="https://unpkg.com/popper.js/dist/umd/popper.min.js"></script>
<link href="~/Content/mdl-v1.1.2/material.css" rel="stylesheet" type="text/css" />
<link href="~/Content/Other/PagesBar.css" rel="stylesheet" type="text/css" />
<link href="~/Content/Other/UserContent.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/User/CardAndPopovers.css" />
<div class="content">
    <div class="film-list mdl-grid">
        @foreach (var item in Model)
        {
            @Html.Partial("MotusFilmCard", item)
            @Html.Partial("MotusPopover", item)
        }
    </div>
    <div class="pages">
        @Html.PagedListPager(Model, page => Url.Action("RenderFilmsList", "User", new { page }))
    </div>
</div>
<script src="~/Scripts/User/UserMain.js"></script>
